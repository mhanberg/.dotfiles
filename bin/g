#!/usr/bin/env bash

case $1 in
  co)
    if [ ! "$2" ]; then
      git branches-sorted | fzf --tac --ansi | sed 's/^\* //' | awk '{ print $1 }' | xargs git checkout
    else
      git checkout "$2"
    fi
    ;;
  *)
    if [[ $# -gt 0 ]]; then
      git "$@"
    else
      git status
    fi
    ;;
esac
