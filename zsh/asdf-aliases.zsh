alias stable-nvim='mise use -g neovim@stable'
alias update-nvim-stable='mise uninstall neovim@stable && mise install neovim@stable'
alias nightly-nvim='mise use -g neovim@nightly'
alias update-nvim-nightly='mise uninstall neovim@nightly && mise install neovim@nightly'
alias master-nvim='mise use -g neovim@ref:master'
alias update-nvim-master='mise uninstall neovim@ref:master && mise install neovim@ref:master'

alias update-zig='mise uninstall zig ref:master && mise install zig ref:master'
