alias stable-nvim='rtx use -g neovim@stable'
alias update-nvim-stable='rtx uninstall neovim@stable && rtx install neovim@stable'
alias nightly-nvim='rtx use -g neovim@nightly'
alias update-nvim-nightly='rtx uninstall neovim@nightly && rtx install neovim@nightly'
alias master-nvim='rtx use -g neovim@ref:master'
alias update-nvim-master='rtx uninstall neovim@ref:master && rtx install neovim@ref:master'

alias update-zig='rtx uninstall zig ref:master && rtx install zig ref:master'
